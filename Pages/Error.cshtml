@page
@model ErrorModel
@{
    ViewData["Title"] = "Erro";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 rounded-4 text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3.5rem;"></i>
                </div>

                <h2 class="fw-bold text-danger mb-3">Ocorreu um erro inesperado</h2>
                <p class="text-muted mb-4">
                    Algo deu errado ao processar sua solicitação.
                    Por favor, tente novamente mais tarde.
                </p>

                @if (Model.ShowRequestId)
                {
                    <p class="text-secondary small mb-4">
                        <strong>ID da solicitação:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                <a asp-page="/Index" class="btn btn-primary rounded-3 px-4">
                    <i class="bi bi-house-door me-1"></i> Voltar para a página inicial
                </a>
            </div>
        </div>
    </div>
</div>
