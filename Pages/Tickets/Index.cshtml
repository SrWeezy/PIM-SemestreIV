@page
@model PIMIV.Pages.Tickets.IndexModel
@{
    ViewData["Title"] = "Tickets";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Tickets</h2>
    <div class="d-flex gap-2">
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i> Novo Ticket</a>
        <a asp-page="/Login" class="btn btn-outline-secondary"><i class="bi bi-box-arrow-right me-1"></i> Sair</a>
    </div>
</div>

@if ((Model.ListaTickets?.Count ?? 0) == 0)
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <div class="mb-3"><i class="bi bi-inboxes" style="font-size:2rem"></i></div>
            <h5 class="mb-1">Nenhum ticket encontrado</h5>
            <p class="text-muted mb-3">Clique em “Novo Ticket” para abrir um chamado.</p>
            <a asp-page="Create" class="btn btn-primary">Abrir Ticket</a>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:35%">Título</th>
                        <th style="width:35%">Descrição</th>
                        <th style="width:15%">Aberto em</th>
                        <th style="width:10%">Usuário</th>
                        <th style="width:5%" class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaTickets)
                    {
                        <tr>
                            <td class="fw-semibold">
                                <a asp-page="Details" asp-route-id="@item.Id" class="text-decoration-none">@item.Titulo</a>
                            </td>
                            <td class="text-truncate" style="max-width:460px;">@item.Descricao</td>
                            <td>@item.DataAbertura.ToString("dd/MM/yyyy")</td>
                            <td>@(item.Usuario?.Nome ?? "-")</td>
                            <td class="text-end">
                                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-search"></i></a>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
    <style>
        .table-hover tbody tr:hover {
            background: rgba(13,110,253,.06);
        }

        .card {
            border-radius: 14px;
        }
    </style>
}
