@page
@model PIMIV.Pages.PrivacyModel
@{
    ViewData["Title"] = "Política de Privacidade";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="fw-bold text-primary mt-3">Política de Privacidade</h2>
                        <p class="text-muted">
                            Entenda como o <strong>AjudAI</strong> protege suas informações e garante a segurança de seus dados.
                        </p>
                    </div>
                    <h5 class="fw-semibold mt-4">🤝 Seus Direitos</h5>
                    <p class="text-muted">
                        Você pode solicitar a exclusão da sua conta a qualquer momento ou revisar as informações armazenadas
                        entrando em contato com o suporte do <strong>AjudAI</strong>.
                    </p>

                    <div class="mt-5 text-center">
                        <a asp-page="/Index" class="btn btn-primary rounded-3 px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> Voltar à página inicial
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
