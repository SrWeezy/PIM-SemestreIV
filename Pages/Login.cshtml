@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow border-0" style="max-width:420px;width:100%;">
        <div class="card-body p-4 p-sm-5">
            <div class="text-center mb-4">
                <i class="bi bi-headset text-primary" style="font-size:3rem;"></i>
                <h2 class="fw-bold text-primary mt-3">AjudAI</h2>
                <p class="text-muted mb-0">Acesse sua conta para continuar</p>
            </div>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="seu@email.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Senha</label>
                    <div class="input-group">
                        <input asp-for="Senha" class="form-control" type="password" placeholder="••••••••">
                        <button type="button" class="btn btn-outline-secondary" onclick="const f=this.previousElementSibling;f.type=f.type==='password'?'text':'password'"><i class="bi bi-eye"></i></button>
                    </div>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                </button>
                @if (!string.IsNullOrEmpty(Model?.Mensagem))
                {
                    <div class="alert alert-danger mt-3 text-center" role="alert">@Model.Mensagem</div>
                }
            </form>
        </div>
    </div>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }