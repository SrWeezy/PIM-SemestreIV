@page
@model PIMIV.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuários";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Usuários</h2>
    <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i> Novo Usuário</a>
</div>
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Usuario)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td class="text-end">
                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-search"></i></a>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>