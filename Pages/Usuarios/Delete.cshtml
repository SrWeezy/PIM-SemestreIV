@page
@model PIMIV.Pages.Usuarios.DeleteModel
@{
    ViewData["Title"] = "Excluir Usuário";
}
<h2 class="mb-3 text-danger">Excluir Usuário</h2>
<div class="alert alert-warning">Tem certeza que deseja excluir este usuário?</div>
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Usuario.Nome</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Usuario.Email</dd>
        </dl>
    </div>
</div>
<form method="post" class="d-flex gap-2">
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Excluir</button>
    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>