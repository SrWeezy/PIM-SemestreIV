@page
@model PIMIV.Pages.Usuarios.CreateModel
@{
    ViewData["Title"] = "Novo Usuário";
}
<h2 class="mb-3">Novo Usuário</h2>
<form method="post">
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Usuario.Nome" class="form-label"></label>
                    <input asp-for="Usuario.Nome" class="form-control" placeholder="Nome completo">
                    <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Usuario.Email" class="form-label"></label>
                    <input asp-for="Usuario.Email" class="form-control" type="email" placeholder="email@exemplo.com">
                    <span asp-validation-for="Usuario.Email" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Salvar</button>
                    <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }